@using HMS.Models
@using HMS.Infrastructure
@model IEnumerable<AppRole>
@{ 
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="col-md-10 grid-margin stretch-card">
    <h2>Roles</h2>
</div>
<div class="col-md-10 grid-margin stretch-card">
    @Html.ActionLink("Create +", "Create", null, new { @class = "btn btn-primary" })
</div>
<br />
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Users in Role</th>
                        <th></th>
                    </tr>
                </thead>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="3" class="text-center">No Roles</td></tr>
                }
                else
                {
                    foreach (AppRole role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                @if (role.Users == null || role.Users.Count == 0)
                                {
                                    @: No Users in Role
                                }
                                else
                                {

                                    <span>
                                        @string.Join(", ", role.Users.Select(x =>
                                                           Html.GetUserName(x.UserId)))
                                    </span>

                                }
                            </td>
                            <td>
                                @using (Html.BeginForm("Delete", "RoleAdmin",
                                 new { id = role.Id }))
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = role.Id },
                                     new { @class = "btn btn-primary btn-sm" })
                                    <button class="btn btn-danger btn-sm"
                                            type="submit">
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>



